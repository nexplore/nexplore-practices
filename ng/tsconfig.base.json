{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "es2020",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "ES2022",
        "typeRoots": ["node_modules/@types"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "lib": ["es2020", "dom"],
        "paths": {
            "@nexplore/practices-ng-commands": ["practices-ng-commands/src/index.ts"],
            "@nexplore/practices-ng-common-util": ["practices-ng-common-util/src/index.ts"],
            "@nexplore/practices-ng-dirty-guard": ["practices-ng-dirty-guard/src/index.ts"],
            "@nexplore/practices-ng-forms": ["practices-ng-forms/src/index.ts"],
            "@nexplore/practices-ng-list-view-source": ["practices-ng-list-view-source/src/index.ts"],
            "@nexplore/practices-ng-logging": ["practices-ng-logging/src/index.ts"],
            "@nexplore/practices-ng-signals": ["practices-ng-signals/src/index.ts"],
            "@nexplore/practices-ng-status": ["practices-ng-status/src/index.ts"],
            "@nexplore/practices-ui": ["practices-ui/src/index.ts"],
            "@nexplore/practices-ui-clarity": ["practices-ui-clarity/src/index.ts"],
            "@nexplore/practices-ui-ktbe": ["practices-ui-ktbe/src/index.ts"]
        },
        "useDefineForClassFields": false,
        "esModuleInterop": true,
        "rootDir": "."
    },
    "exclude": ["node_modules", "tmp"]
}
