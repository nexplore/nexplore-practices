{
    "name": "practices-ui-tailwind",
    "$schema": "../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "generators": {
        "@schematics/angular:component": {
            "standalone": true
        }
    },
    "sourceRoot": "practices-ui-tailwind/src",
    "prefix": "pui",
    "targets": {
        "build": {
            "executor": "@nx/angular:package",
            "dependsOn": ["^build"],
            "options": {
                "tsConfig": "practices-ui-tailwind/tsconfig.lib.json",
                "project": "practices-ui-tailwind/ng-package.json"
            },
            "configurations": {
                "production": {
                    "tsConfig": "practices-ui-tailwind/tsconfig.lib.prod.json"
                }
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "options": {
                "jestConfig": "practices-ui-tailwind/jest.config.js"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "options": {
                "lintFilePatterns": ["practices-ui-tailwind/**/*.ts", "practices-ui-tailwind/package.json"]
            }
        },
        "storybook": {
            "executor": "@storybook/angular:start-storybook",
            "options": {
                "configDir": "practices-ui-tailwind/.storybook",
                "browserTarget": "practices-ui-tailwind:build-storybook",
                "styles": ["samples-tailwind/src/styles.css"],
                "compodoc": true,
                "compodocArgs": ["-e", "json", "-d", "practices-ui-tailwind"],
                "port": 6006
            }
        },
        "build-storybook": {
            "executor": "@storybook/angular:build-storybook",
            "outputs": ["{options.outputDir}"],
            "options": {
                "configDir": "practices-ui-tailwind/.storybook",
                "browserTarget": "practices-ui-tailwind:build-storybook",
                "styles": ["samples-tailwind/src/styles.css"],
                "compodoc": true,
                "compodocArgs": ["-e", "json", "-d", "practices-ui-tailwind"],
                "outputDir": "dist/storybook/practices-ui-tailwind"
            }
        },
        "static-storybook": {
            "executor": "@nx/web:file-server",
            "dependsOn": ["build-storybook"],
            "options": {
                "buildTarget": "practices-ui-tailwind:build-storybook",
                "staticFilePath": "dist/storybook/practices-ui-tailwind",
                "spa": true
            },
            "configurations": {
                "ci": {
                    "buildTarget": "practices-ui-tailwind:build-storybook:ci"
                }
            }
        },
        "gen-manifest": {
            "executor": "@nx/js:node",
            "options": {
                "outputPath": "dist/tmp",
                "main": "practices-ui-tailwind/tools/generate-manifest.ts",
                "tsConfig": "practices-ui-tailwind/tsconfig.schematics.json"
            }
        },
        "build-schematics": {
            "executor": "nx:run-commands",
            "options": {
                "command": "pnpm run build:schematics"
            },
            "dependsOn": ["build"]
        },
        "test-schematics": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/practices-ui-tailwind-schematics"],
            "options": {
                "jestConfig": "practices-ui-tailwind/jest-schematics.config.js",
                "passWithNoTests": false
            }
        }
    }
}

