{
    "$schema": "http://json-schema.org/schema",
    "$id": "AddComponentSchema",
    "title": "Add component sources",
    "type": "object",
    "properties": {
        "dest": {
            "type": "string",
            "description": "Destination root folder for all copied components",
            "default": "src/practices-ui-tailwind"
        },
        "names": {
            "type": "string",
            "description": "Comma separated component names to add"
        },
        "all": {
            "type": "boolean",
            "description": "Include all components"
        },
        "moduleExports": {
            "type": "string",
            "description": "Comma separated Angular Module export group names"
        },
        "rewriteImports": {
            "type": "boolean",
            "description": "Rewrite library imports to relative paths",
            "default": true
        }
    },
    "oneOf": [{ "required": ["all"] }, { "required": ["names"] }, { "required": ["moduleExports"] }],
    "additionalProperties": false
}

