    <ItemGroup>
      <None Remove="Syncfusion.Pdf\Assets\LiberationMono-Bold.ttf" />
      <None Remove="Syncfusion.Pdf\Assets\LiberationMono-BoldItalic.ttf" />
      <None Remove="Syncfusion.Pdf\Assets\LiberationMono-Italic.ttf" />
      <None Remove="Syncfusion.Pdf\Assets\LiberationMono-Regular.ttf" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\src\Nexplore.Practices.Configuration\Nexplore.Practices.Configuration.csproj" />
        <ProjectReference Include="..\..\src\Nexplore.Practices.Core\Nexplore.Practices.Core.csproj" />
        <ProjectReference Include="..\..\src\Nexplore.Practices.EntityFramework\Nexplore.Practices.EntityFramework.csproj" />
        <ProjectReference Include="..\..\src\Nexplore.Practices.File\Nexplore.Practices.File.csproj" />
