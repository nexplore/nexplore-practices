        <ProjectReference Include="..\..\src\Nexplore.Practices.Web\Nexplore.Practices.Web.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Compile Update="Web\Localization\TestResource.Designer.cs">
            <DesignTime>True</DesignTime>
            <AutoGen>True</AutoGen>
            <DependentUpon>TestResource.resx</DependentUpon>
        </Compile>
        <Compile Update="Web\Localization\FallbackResource.Designer.cs">
            <DesignTime>True</DesignTime>
            <AutoGen>True</AutoGen>
            <DependentUpon>FallbackResource.resx</DependentUpon>
        </Compile>
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Update="Web\Localization\TestResource.resx">
            <Generator>ResXFileCodeGenerator</Generator>
            <LastGenOutput>TestResource.Designer.cs</LastGenOutput>
        </EmbeddedResource>
        <EmbeddedResource Update="Web\Localization\FallbackResource.resx">
            <Generator>ResXFileCodeGenerator</Generator>
            <LastGenOutput>FallbackResource.Designer.cs</LastGenOutput>
        </EmbeddedResource>
        <EmbeddedResource Include="Syncfusion.Pdf\Assets\LiberationMono-Bold.ttf" />
        <EmbeddedResource Include="Syncfusion.Pdf\Assets\LiberationMono-BoldItalic.ttf" />
        <EmbeddedResource Include="Syncfusion.Pdf\Assets\LiberationMono-Italic.ttf" />
        <EmbeddedResource Include="Syncfusion.Pdf\Assets\LiberationMono-Regular.ttf" />
        <EmbeddedResource Include="Syncfusion.Pdf\Components\Assets\test_image.png" />
    </ItemGroup>

