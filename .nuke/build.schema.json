{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "Host": {
      "type": "string",
      "enum": [
        "AppVeyor",
        "AzurePipelines",
        "Bamboo",
        "Bitbucket",
        "Bitrise",
        "GitHubActions",
        "GitLab",
        "Jenkins",
        "Rider",
        "SpaceAutomation",
        "TeamCity",
        "Terminal",
        "TravisCI",
        "VisualStudio",
        "VSCode"
      ]
    },
    "ExecutableTarget": {
      "type": "string",
      "enum": [
        "AnalyzeDotNet",
        "AnalyzeNg",
        "BuildDotNet",
        "BuildKtBeStorybook",
        "BuildNg",
        "BuildPackAll",
        "Clean",
        "PackDotNet",
        "PackKtBeStorybook",
        "PackNg",
        "PublishAll",
        "PublishNpm",
        "PublishNuGet",
        "TestDotNet",
        "TestNg",
        "UpdateBuildNumber"
      ]
    },
    "Verbosity": {
      "type": "string",
      "description": "",
      "enum": [
        "Verbose",
        "Normal",
        "Minimal",
        "Quiet"
      ]
    },
    "NukeBuild": {
      "properties": {
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "description": "Host for execution. Default is 'automatic'",
          "$ref": "#/definitions/Host"
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Verbosity": {
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "$ref": "#/definitions/Verbosity"
        }
      }
    }
  },
  "allOf": [
    {
      "properties": {
        "NpmPreReleaseApiKey": {
          "type": "string",
          "description": "API key for pre-release NPM registry"
        },
        "NpmPreReleaseRegistry": {
          "type": "string",
          "description": "Pre-release NPM registry"
        },
        "NpmPublicReleaseApiKey": {
          "type": "string",
          "description": "API key for public release NPM registry"
        },
        "NpmPublicReleaseRegistry": {
          "type": "string",
          "description": "Public release NPM registry"
        },
        "NuGetPreReleaseApiKey": {
          "type": "string",
          "description": "API Key for pre-release NuGet source"
        },
        "NuGetPreReleaseSource": {
          "type": "string",
          "description": "Pre-release NuGet source"
        },
        "NuGetPublicReleaseApiKey": {
          "type": "string",
          "description": "API Key for public release NuGet feed"
        },
        "NuGetPublicReleaseSource": {
          "type": "string",
          "description": "Public release NuGet source"
        },
        "PublishArtifactsDirectory": {
          "type": "string",
          "description": "Directory with artifacts in the same folder structure as they got generated by the build"
        }
      }
    },
    {
      "$ref": "#/definitions/NukeBuild"
    }
  ]
}
